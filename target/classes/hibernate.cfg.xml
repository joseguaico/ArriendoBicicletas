<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_bicicletas</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">adminadmin</property>
    
    <mapping resource="com/arriendo/modelos/EstadoBicicleta.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Reserva.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Usuario.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Rol.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Arriendo.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Cliente.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Bicicleta.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/TipoBicicleta.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Marca.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Sucursal.hbm.xml"/>
    <mapping resource="com/arriendo/modelos/Accesorio.hbm.xml"/>
    
    
    
  </session-factory>
</hibernate-configuration>
